  # Maintained by Chef.  Local changes will be overwritten

  <% if @php %>
    upstream php_<%= @user %>_<%= @name %> {
      server unix:/var/run/php-<%= @user %>-<%= @name %>.sock;
    }
  <% end %>
  <% unless @vagrant && !@disable_www && @ssl %>
  server {
    listen <%= @listen %>;
    server_name www.<%= Array(@server_name)[0] %>;
    return 301 $scheme://<%= Array(@server_name)[0] %>$request_uri;
  }
  <% end %>

  server {
    listen <%= @listen %> <%= 'default' if @default %> <%= 'deferred' if @deferred %>;
    <% if @ssl && !@ssl[:manual] %>listen 443 <%= 'default' if @ssl[:default] %><%= 'default_server' if @ssl[:default_server] %> ssl;<% end %>
    server_name <%= Array(@server_name).join(' ') %>;

    <% if @ssl %>ssl_certificate <%= @ssl[:certificate] %>;
    ssl_certificate_key <%= @ssl[:certificate_key] %>;
    ssl_trusted_certificate <%= @ssl[:ca] %>;
    <% if node['rails']['nginx']['hsts'] %>
    <% node['rails']['nginx']['hsts_configs'].each do |k, v| %>
    <%= k %> <%= v %>;
    <% end %>
    <% end %>

    <% node['rails']['nginx']['ssl_extra_configs'].each do |k, v| %>
    <%= k %> <%= v %>;
    <% end %>

    <% if node['rails']['nginx']['stapling'] %>
    <% node['rails']['nginx']['stapling_configs'].each do |k, v| %>
    <%= k %> <%= v %>;
    <% end %>
    <% end %>

    if ($http_host !~ "<%= Array(@server_name)[0] %>"){
      rewrite ^ http://$http_host$request_uri permanent;
    }

    <% if @disable_www %>if ($http_host = "www.<%= Array(@server_name)[0] %>") {
      rewrite ^ $scheme://<%= Array(@server_name)[0] %>$request_uri permanent;
    }<% end %>
    <% end %>

    root   <%= @path %>/docs/<%= @path_suffix || '' %>;
    autoindex off;
    charset utf-8;

    <% Array(@block).each do |b| %>
    <%= b %>
    <% end %>

    <% if @rewrites %>
      <% @rewrites.each do |rewrite| %>
        rewrite <%= rewrite['query'] %> <%= rewrite['uri'] %> <%= rewrite['options'] %>;
      <% end %>
    <% end %>

    <% if @access_log %>
    access_log <%= @path %>/log/access.log combined;
    <% else %>
    access_log off;
    <% end %>

    <% if @error_log %>
    error_log <%= @path %>/log/error.log error;
    <% end %>

    <% if @hidden && @hidden.count > 0 %>
      <% hidden_paths = '|' %>
      <% hidden_paths << Array(@hidden).join('|') %>
    <% end %>

    location ~ (^/(uploads/|ini.php)|/\.svn/|/\.git/|/.hta.+<%=hidden_paths%>){
      access_log off;
      log_not_found off;
      deny all;
    }

    <% if @php %>
    <%= render 'nginx/_engine.erb' %>
      <% if @php_rewrites %>
        <% @php_rewrites.each do |r| %>
          <% if r[:ext] %>
    location ~ \.<%= r[:ext] %>$ {
        <% if @auth_basic %>
          auth_basic '<%= @auth_basic_name %>';
          auth_basic_user_file <%= @auth_basic_user_file %>;
        <% end %>
        try_files $uri @website;
    }
          <% elsif r[:location] %>
    location <%= r[:location] %> {
      <% if @auth_basic %>
        auth_basic '<%= @auth_basic_name %>';
        auth_basic_user_file <%= @auth_basic_user_file %>;
      <% end %>
      index index.html index.php;
      try_files $uri $uri/ <%= r.include?('fallback') ? r[:fallback] : '=404' %>;
    }
          <% end -%>
        <% end -%>
      <% end -%>

    location ~ \.php$ {
      try_files $uri =404;
      fastcgi_split_path_info ^(.+\.php)(/.+)$;
      include fastcgi_params;
      fastcgi_pass  php_<%= @user %>_<%= @name %>;
      fastcgi_index index.php;
      fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
    }

    # location @admin_website {
    #  include fastcgi_params;
    #  fastcgi_pass  php_<%= @user %>_<%= @name %>;
    ## fastcgi_index index.php;
    #  fastcgi_param  SCRIPT_FILENAME  $document_root/admin/index.php;
    # }
    <% else %>
    location / {
      <% if @auth_basic %>
        auth_basic '<%= @auth_basic_name %>';
        auth_basic_user_file <%= @auth_basic_user_file %>;
      <% end %>
      index index.html;
      try_files $uri $uri/ =404;
    }
    <% end %>

    location ~* ^.+\.(jpg|jpeg|gif|png|ico|svg|js|css|mp3|ogg|mpe?g|avi|pdf|doc|docx|xls|xlsx|ppt|pptx|dmg|tgz|tar.gz|zip|gz|bz2?|rar|ttf|woff|txt|syx)$ {
      <% if @file_rewrites %>
      try_files $uri @file_rewrite @engine_file_rewrite;
      <% end %>
      access_log        off;
      log_not_found     off;
      expires           360d;
    }

    location @file_rewrite {
      <% if @file_rewrites %>
        <% @file_rewrites.each do |rewrite| %>
      rewrite <%= rewrite['query'] %> <%= rewrite['uri'] %> <%= rewrite['options'] %>;
        <% end -%>
      <% end -%>
    }

    <% if @error_pages %>
      <% @error_pages.each do |p| %>
        error_page <%= p[:code] %> <%= p[:location] %>;
      <% end %>
    <% else %>
    error_page  500 502 503 504  /50x.html;
    location = /50x.html {
      root   /var/www/html;
    }
    <% end %>
  }
