<% @with_defaults ||= false %>
<% @with_ssl_on ||= false %>
<% @server_name ||= [] %>
<% @tunes ||= {} %>
<% @ssl ||= {} %>
<% @nginx ||= {} %>
<% if @tunes['force_ssl'] && !@ssl %>
return 301 https://$server_name$request_uri;
<% end -%>
<% if @ssl %>
    <% if @with_defaults %>
    if ($http_host !~ ^<%= Array(@server_name).join('|') %>){
      rewrite ^ http://$http_host$request_uri permanent;
    }
    <% end -%>

    <% if @with_ssl_on %>
    ssl on;
    <% end -%>
    ssl_certificate <%= @ssl['certificate'] %>;
    ssl_certificate_key <%= @ssl['certificate_key'] %>;
    <% if @ssl['ca'] %>ssl_trusted_certificate <%= @ssl['ca'] %>;<% end %>

    <% if @nginx['hsts'] %>
      <% @nginx['hsts_configs'].each do |k, v| %>
        <%= k %> <%= v %>;
      <% end %>
    <% end %>

    <% @nginx['extra_configs'].each do |k, v| %>
      <%= k %> <%= v %>;
    <% end %>

    <% if @nginx['stapling'] %>
      <% @nginx['stapling_configs'].each do |k, v| %>
        <%= k %> <%= v %>;
      <% end %>
    <% end -%>
  <% end -%>
